             x:Class="Ejercicio9.CssEjemplo">
    <ContentPage.Resources>
        <StyleSheetExtension Source="estilos.css"></StyleSheetExtension>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Esto es un ejemplo"
                x:Name="label1" />
